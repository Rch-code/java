
public class While {

	public static void main(String[] args) {
		int sum = 0;
		int number = 1;
		
		// While loop to sum numbers 1 - 100
		while (number <= 100) {
			sum = sum + number;
			number = number + 1;
		}
		System.out.println ("The sum of numbers to 100 = " + sum);
		
		int sum = 0;
		int number = 1;
		
		// While loop to sum odd numbers from 1 - 100
		while (number <= 100) {
			sum = sum + number;
			number = number + 2;
		}
		System.out.println("The sum of odd numbers from 1 - 100 is " + sum);
	}

}
